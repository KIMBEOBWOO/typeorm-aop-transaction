{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["es5", "es6"],
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "noLib": false,
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "target": "es6",
      "sourceMap": true,
      "outDir": "dist",
    },
    "include": ["src/**/*", ".eslintrc.js"],
    "exclude": ["node_modules", "dist", "temp", "src/test/*"]
  }